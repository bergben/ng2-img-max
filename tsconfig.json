{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es2015",
        "target": "es5",
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "paths": {
            "@angular/*": [
                "node_modules/@angular/*"
            ],
            "rxjs/*": ["node_modules/rxjs/*"],
            "ng2-pica": ["node_modules/ng2-pica"],
            "exifr": ["node_modules/exifr"]
        },
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "ng2-img-max.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}
